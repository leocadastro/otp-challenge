@{
    ViewBag.Title = "Users";
}

@section scripts
{
    <script src="~/Scripts/Pages/Controllers/userController.js"></script>
}

<h2>Users</h2>

<p>
    <a href="@Url.Action("Create", "User")" class="btn btn-success btn-sm">Create New</a>
</p>

<div ng-controller="userController">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="user in users">
                <td>{{ user.UserId }}</td>
                <td>{{ user.Email }}</td>
                <td>{{ user.Name}}</td>
                <td>
                    <button ng-click="generatePassword(user.UserId)" class="btn btn-primary btn-sm">Generate Password</button>
                    <button ng-click="delete(user.UserId)" class="btn btn-danger btn-sm">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
