
@{
    ViewBag.Title = "Index";
}

@section scripts
{
    <script src="~/Scripts/Pages/Controllers/logAccessController.js"></script>
}

<h2>Logs</h2>

<div ng-controller="logAccessController">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Time</th>
                <th>Fail</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="log in logs">
                <td>{{ log.LogAccessId }}</td>
                <td>{{ log.Email }}</td>
                <td>{{ log.Time | date:'yyyy-MM-dd HH:mm:ss' }}</td>
                <td ng-if="log.Fail == true"> <div class="btn btn-danger">YES</div> </td>
                <td ng-if="log.Fail == false"><div class="btn btn-success">NO</div></td>
            </tr>
        </tbody>
    </table>
</div>